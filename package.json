{
  "name": "hydrogen-energy-ui",
  "version": "1.0.7",
  "description": "GUI for hydrogen energy stand",
  "repository": {
    "url": "https://github.com/SonikdDropout/hydrogen-energy-ui.git"
  },
  "main": "./main.js",
  "scripts": {
    "wp-watch": "webpack --watch",
    "wp-build": "cross-env NODE_ENV=production webpack",
    "postinstall": "electron-builder install-app-deps",
    "el-watch": "cross-env NODE_ENV=development  electron .",
    "el-build": "electron-builder --linux --armv7l",
    "build": "run-s wp-build el-build",
    "dev": "run-p wp-watch el-watch",
    "inspect": "electron --inspect ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "cross-env": "^7.0.0",
    "css-loader": "^3.4.2",
    "electron": "^6.1.7",
    "electron-builder": "^22.3.2",
    "electron-reload": "^1.5.0",
    "jest": "^25.1.0",
    "mini-css-extract-plugin": "^0.9.0",
    "npm-run-all": "^4.1.5",
    "style-loader": "^1.1.3",
    "svelte": "^3.18.1",
    "svelte-loader": "^2.13.6",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  },
  "dependencies": {
    "chart.js": "^2.9.4",
    "chartjs-plugin-zoom": "^0.7.5",
    "drivelist": "^8.0.9",
    "exceljs": "^4.2.1",
    "serialport": "^8.0.7",
    "usb-detection": "^4.7.0"
  },
  "prettier": {
    "svelteSortOrder": "scripts-markup-styles",
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "build": {
    "directories": {},
    "npmRebuild": false,
    "linux": {
      "executableName": "hydrogen-energy-ui",
      "icon": "doc/icon.png",
      "category": "education"
    }
  }
}
